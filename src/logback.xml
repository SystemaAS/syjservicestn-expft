<configuration scan="true" scanPeriod="10 seconds" debug="true">
  <property name="LOG_DIR" value="${catalina.home}/logs" />
  <property name="LOG_FILE" value="${LOG_DIR}/logsg_syjservicestn-expft.log" />
  <property name="LOG_FILE_ROAD_ENTRY" value="${LOG_DIR}/logsg_syjservicestn-expft-roadentry.log" />
  <property name="OWN_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%p] %c:%L - %m%n" />
  <property name="OWN_ENTRY_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%p] %class{0}:%L - %m%n" />
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <!--  <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern> -->
      <pattern>${OWN_PATTERN}</pattern>
    </encoder>
  </appender>
  
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_FILE}</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        <!-- daily rollover -->
        <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}</fileNamePattern>
        <!-- keep 30 days' worth of history capped at 3GB total size -->
        <maxHistory>30</maxHistory>
        <totalSizeCap>50MB</totalSizeCap>
    </rollingPolicy>
    <encoder>
        <pattern>${OWN_PATTERN}</pattern>
    </encoder>
</appender>
<appender name="ROAD-ENTRY-FILE" class="ch.qos.logback.core.FileAppender">
    <file>${LOG_FILE_ROAD_ENTRY}</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        <!-- daily rollover -->
        <fileNamePattern>${LOG_FILE_ROAD_ENTRY}.%d{yyyy-MM-dd}</fileNamePattern>
        <!-- keep 30 days' worth of history capped at 3GB total size -->
        <maxHistory>30</maxHistory>
        <totalSizeCap>50MB</totalSizeCap>
    </rollingPolicy>
    <encoder>
        <pattern>${OWN_ENTRY_PATTERN}</pattern>
    </encoder>
</appender>  


  <logger name="no.systema" level="DEBUG" additivity="false"> 
        <appender-ref ref="FILE" /> 
  </logger> 
  
  <!-- additivity=false ensures analytics data only goes to the analytics log -->
  <logger name="roadentry" level="DEBUG" additivity="false">
      <appender-ref ref="ROAD-ENTRY-FILE"/>
  </logger>
    
  <root level="error">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>